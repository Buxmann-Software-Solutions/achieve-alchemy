---
import Logo from "@/components/Logo.astro";

const navigation = {
  solutions: [
    { name: "Marketing", href: "#" },
    { name: "Analytics", href: "#" },
    { name: "Commerce", href: "#" },
    { name: "Insights", href: "#" },
  ],
  support: [
    { name: "Pricing", href: "#" },
    { name: "Documentation", href: "#" },
    { name: "Guides", href: "#" },
    { name: "API Status", href: "#" },
  ],
  company: [
    { name: "Features", href: "/#features" },
    { name: "Contact", href: "https://twitter.com/EMBuxmann"}
  ],
  legal: [
    { name: "Privacy", href: "/privacy" },
    { name: "Terms", href: "/terms" },
  ],

};
---

<footer class="" aria-labelledby="footer-heading">
  <h2 id="footer-heading" class="sr-only">Footer</h2>
  <div class="mx-auto max-w-7xl px-6 pb-8 pt-16 sm:pt-24 lg:px-8 lg:pt-32">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
<Logo />
      <div class="mt-16 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
        <div class="opacity-0 md:grid md:grid-cols-2 md:gap-8">
          <div>
            <div class="text-sm font-semibold leading-6 text-gray-900">
              Solutions
            </div>
            <ul role="list" class="mt-6 space-y-4">
              {
                navigation.solutions.map((item) => (
                  <li>
                    <a
                      href={item.href}
                      class="text-sm leading-6 text-gray-600 hover:text-gray-900"
                    >
                      {item.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
          <div class="mt-10 md:mt-0">
            <div class="text-sm font-semibold leading-6 text-gray-900">
              Support
            </div>
            <ul role="list" class="mt-6 space-y-4">
              {
                navigation.support.map((item) => (
                  <li>
                    <a
                      href={item.href}
                      class="text-sm leading-6 text-gray-600 hover:text-gray-900"
                    >
                      {item.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div>
            <div class="text-sm font-semibold leading-6 text-gray-900">
              Company
            </div>
            <ul role="list" class="mt-6 space-y-4">
              {
                navigation.company.map((item) => (
                  <li>
                    <a
                      href={item.href}
                      class="text-sm leading-6 text-gray-600 hover:text-gray-900"
                    >
                      {item.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
          <div class="mt-10 md:mt-0">
            <div class="text-sm font-semibold leading-6 text-gray-900">Legal</div>
            <ul role="list" class="mt-6 space-y-4">
              {
                navigation.legal.map((item) => (
                  <li>
                    <a
                      href={item.href}
                      class="text-sm leading-6 text-gray-600 hover:text-gray-900"
                    >
                      {item.name}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div
      class="mt-16 border-t border-gray-900/10 pt-8 sm:mt-20 lg:mt-24 lg:flex lg:items-center lg:justify-between"
    >
      <div>
        <div class="text-sm font-semibold leading-6 text-gray-900">
          Subscribe to our newsletter
        </div>
        <p class="mt-2 text-sm leading-6 text-gray-600">
          Stay ahead of the curve with exclusive insights and updates on our
          app's launch. Don't miss out!
        </p>
      </div>
      <div class="mt-6 sm:flex sm:max-w-md lg:w-[400px] lg:mt-0">
        <iframe
          src="https://embeds.beehiiv.com/73e9d242-7eff-47ff-9508-752ad2fd5878?slim=true"
          data-test-id="beehiiv-embed"
          height="52"
          width="100%"
          frameborder="0"
          scrolling="no"
          style="margin: 0; border-radius: 0px !important; background-color: transparent;"
        ></iframe>
      </div>
    </div>
  </div>
</footer>
